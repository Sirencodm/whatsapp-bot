{
  "name": "whatsapp-bot",
  "version": "3.0.0-dev",
  "description": "A simple and easy-to-use WhatsApp bot project, written in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint && npm run compile",
    "compile": "tsc --build tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhycorp/whatsapp-bot.git"
  },
  "author": "Zhycorp",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/zhycorp/whatsapp-bot/issues"
  },
  "homepage": "https://github.com/zhycorp/whatsapp-bot#readme",
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": "@zhycorp/eslint-config/typescript"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@zhycorp/eslint-config": "^6.0.2",
    "eslint": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@open-wa/wa-automate": "^4.23.7"
  }
}
